<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/image_title_sudoku"
            android:layout_gravity="top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCredits"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="Créditos"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvAluno1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:text="Rafael Sá - 21270564"
                android:textAlignment="center"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/tvAluno2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:text="David Paiva - 21270607"
                android:textAlignment="center"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/tvAluno3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dp"
                android:text="Francisco Silva - 21270547"
                android:textAlignment="center"
                android:textSize="20dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCreditsInfo"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:padding="20dp"
            android:text="Unidade Curricular de Arquiteturas Móveis | Engenharia Informática | DEIS-ISEC 2019/2020"
            android:textAlignment="center"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
